<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEE"
    >
    
    <include layout="@layout/csdn_item_title"/>
    
    <com.bandunion.item.tabindicator.framework.TabPageIndicator
        android:id="@+id/csdn_tabpageindicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/csdn_tabpageindicator"
        />
    
    <android.support.v4.view.ViewPager
        android:id="@+id/csdn_id_viewpager"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        />     
        
</LinearLayout>
