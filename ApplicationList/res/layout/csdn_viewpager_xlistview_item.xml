<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"  
    android:paddingRight="16dp"  
    android:paddingTop="8dp"  
    android:paddingBottom="8dp"  
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/csdn_xlistview_tv_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"
        android:text="OpenStack基金会主席：OpenStack已成为客户在开源云环境中的首选"
        />
    
	<LinearLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:orientation="horizontal"
	    android:gravity="center_horizontal"
	    >
		<ImageView 
		    android:id="@+id/csdn_xlistview_iv_img"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_marginRight="8dp"
		    android:src="@drawable/ic_launcher"
		    android:visibility="visible"
		    />	    
		    
		<LinearLayout
		    android:layout_height="match_parent"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:orientation="vertical"
		    >
		    <TextView 
		        android:id="@+id/csdn_xlistview_tv_content"
		        android:layout_height="0dp"
		        android:layout_weight="1"
		        android:layout_width="match_parent"
		        android:textSize="14sp"
		        android:text="在活动现场，CSDN记者采访到了OpenStack基金会主席Alan Clark，Alan就当前开源云计算市场和技术发展等话题分享了自己的见解。"
		        android:maxLines="2"
		        android:textColor="@color/nomalGray"
		       	android:layout_marginLeft="8dp"
		        />
		    <TextView 
		        android:id="@+id/csdn_xlistview_tv_date"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_gravity="right"
		        android:textSize="10sp"
		        android:text="2016-01-04 15:40"
		        android:textColor="@color/nomalGray"
		        />		    
		</LinearLayout>
		
	</LinearLayout>
</LinearLayout>
